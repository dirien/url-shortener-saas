{
  "name": "url-shortener-lambdas",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:shorten && npm run build:redirect && npm run build:stats && npm run build:list && npm run build:delete",
    "build:shorten": "esbuild shorten.ts --bundle --platform=node --target=node20 --outfile=dist/shorten.js --external:@aws-sdk/*",
    "build:redirect": "esbuild redirect.ts --bundle --platform=node --target=node20 --outfile=dist/redirect.js --external:@aws-sdk/*",
    "build:stats": "esbuild stats.ts --bundle --platform=node --target=node20 --outfile=dist/stats.js --external:@aws-sdk/*",
    "build:list": "esbuild list.ts --bundle --platform=node --target=node20 --outfile=dist/list.js --external:@aws-sdk/*",
    "build:delete": "esbuild delete.ts --bundle --platform=node --target=node20 --outfile=dist/delete.js --external:@aws-sdk/*",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^25.0.8",
    "esbuild": "^0.20.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.3"
  }
}
